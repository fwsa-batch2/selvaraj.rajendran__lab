  </head>

  <body>
    <%= render "render/navbar" %>
    <% if notice %>
      <div id="alert-id">

        <p class="alert alert-success notice"><%= notice %></p>
      </div>
    <% elsif alert %>
      <div id="alert-id">
        <p class="alert alert-danger notice"><%= alert %></p>
      </div>
    <% end %>
    <%= yield %>
      <%# <%= render "render/footer" %>
  </body>
</html>
