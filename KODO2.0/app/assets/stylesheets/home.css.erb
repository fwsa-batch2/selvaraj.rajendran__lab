/* section one  */


.sec-one {
    display: flex;
    /* justify-content: center; */
    align-items: center;
    height: 80vh;
    width: 100%;
}

.sec-one .one-text {
    display: block;
    height: fit-content;
    z-index: 10;
    background: rgba(0, 0, 0, 0.14);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    backdrop-filter: blur(4.5px);
    -webkit-backdrop-filter: blur(4.5px);
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.18);
    padding: 20px;
}

.E-holder .holder-img {
    position: absolute;
    top: 0;
    left: 0;
    filter: saturate(0);
    z-index: 1;
    overflow: hidden;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

.img {
    width: 100%;
    height: 100%;
    top: 0;
    right: 0;
    position: relative;

}

.img:hover {
    filter: blur(1px);
    filter: grayscale(100%);

}

.one-text h1 {
    font-size: 4rem;
    line-height: 5rem;
    font-weight: 700;
    text-transform: capitalize;
    color: var(--b-p-text);
}

.small-text {
    font-size: var(--font-text);
    color: var(--b-p-text);
}


/* section one ends  */

/* section two  */


.bg-holder-1 .container h1 {
    padding-top: 1.5rem;
    font-weight: 300;
    font-size: 2.4rem;
}

.sec-two {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: row;
    padding-bottom: 5%;
}

.sec-two .sec-about {
    width: 50%;
    /* background-color: aqua; */
    height: 100%;
    display: flex;
    flex-direction: column;
    /* justify-content: center; */
    align-items: center;
    padding: 20px;
    color: var(--b-s-text);
    text-align: left;

}
.sec-about p{
    line-height: var(--font-text-spacing);
    text-align: left;
}

.sec-two .about-img {
    width: 50%;
    /* background-color: aquamarine; */
    height: 100%;
    overflow: hidden;
}

