/* section three  */

.sec-courses{
    height: 100vh;
    width: auto;
    background: var(--bg);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-bottom: 50px;
}

.scroll
{
    position: absolute;
    bottom: 0;
    right: 0;
    font-size: 70px;
    z-index: 40;
    margin: 0 20px;
    color: var(--b-p-text);
   animation: bounceUp 2s ease-in-out infinite;
}