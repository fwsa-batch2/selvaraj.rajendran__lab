<%= form_for  @blog do |f| %>
  <%= f.label :title %>
  <%= f.text_field  :title %>
  <br>
  <%= f.label :content %>
  <%= f.rich_text_area  :content %>
  <br>
  <%= f.label :iframe %>
  <%= f.text_area :iframe %>
  <br>
  <%= f.select :category_id , Category.all.map{ |c| [c.category, c.id]}%>
 <br>
<%= f.label :image, "image"  %>
  <%= f.file_field :image %>
<% if @blog.image.present? %>
 <br> <%= image_tag(@blog.image ,width: '400px') %>
 <% else %>
 click to add img
 <% end %>



  <%= f.submit %>
<% end %>
