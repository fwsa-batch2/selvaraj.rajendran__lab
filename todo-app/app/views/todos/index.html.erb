
<div class="card-header">
<div class="card-title">
<h1>Todos</h1>
<div class="card-body">
<%= link_to 'New Task', new_todo_path,class: "btn btn-outline-dark" %>
<br>
<small class="text-muted">click to add a task</small>
</div>
</div>
</div>

<div class="col-lg-8 mx-auto">
<div class="table-responsive">
<h5 id="notice" class="popup"><%= notice %></h5>
<table class="table table-hover">
<div class="form-group mb-3">
  <thead class="table-dark">
    <tr>
      <th>Task</th>
      <th>Date</th>
      <th colspan="10"></th>
    </tr>
  </thead>
  </div>

  <tbody>
    <% @todos.each do |todo| %>

      <tr>
        <td><%= todo.task %></td>
        <td><%= todo.date %></td>
        <td><%= link_to 'Show', todo ,class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) ,class:"btn btn-secondary" %></td>
        <td>
        <%= link_to delete_todo_path(todo),class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } do %> 
          Delete
        <% end %>
        </td> 
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


